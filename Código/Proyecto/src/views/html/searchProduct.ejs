<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Multifiltros</title>
    <link rel="stylesheet" href="/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" type="text/css" href="/css/main.css" />
    <link
      href="http://fonts.googleapis.com/css?family=Open+Sans:600italic,400,800,700,300"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="http://fonts.googleapis.com/css?family=BenchNine:300,400,700"
      rel="stylesheet"
      type="text/css"
    />
    <script src="/js/modernizr.js"></script>
  </head>
  <body>
    <header class="top-header">
      <div class="container">
        <div class="row">
          <div class="col-xs-5 header-logo">
            <br />
            <a href="/api/products/view"
              ><img src="/img/icon.jpg" alt="" class="img-responsive logo"
            /></a>
          </div>

          <div class="col-md-7">
            <nav class="navbar navbar-default">
              <div class="container-fluid nav-bar">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                  <button
                    type="button"
                    class="navbar-toggle collapsed"
                    data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1"
                  >
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div
                  class="collapse navbar-collapse"
                  id="bs-example-navbar-collapse-1"
                >
                  <ul class="nav navbar-nav navbar-right">
                    <li>
                      <a class="menu active" href="/api/products/view"
                        >Inventario</a
                      >
                    </li>
                    <li>
                      <a class="menu" href="/api/products/register"
                        >Agregar Producto</a
                      >
                    </li>
                    <li>
                      <a class="menu" href="/api/products/search"
                        >Buscar Producto</a
                      >
                    </li>
                    <li>
                      <a class="menu" href="/api/sales/register"
                        >Registrar Venta</a
                      >
                    </li>
                    <li>
                      <a class="menu" href="/api/sales/manager">Buscar Venta</a>
                    </li>
                    <li>
                      <a class="menu" href="/">Salir</a>
                    </li>
                  </ul>
                </div>
                <!-- /navbar-collapse -->
              </div>
              <!-- / .container-fluid -->
            </nav>
          </div>
        </div>
      </div>
    </header>
    <!-- end of header area -->
    <!-- about section -->
    <div class="limiter">
      <div class="container-login100">
        <div class="wrap-login100">
          <div class="login100-pic js-tilt" data-tilt>
            <img
              src="https://static.thenounproject.com/png/561776-200.png"
              alt="IMG"
            />
          </div>
          <form
            class="login100-form validate-form"
            action="/api/products/ver"
            method="post"
          >
            <span class="login100-form-title"> Buscar Producto </span>

            <div
              class="wrap-input100 validate-input"
              data-validate="Es requerido un ID de Producto"
            >
              <input
                class="input100"
                type="text"
                name="IDPRODUCT"
                placeholder="ID del Producto"
                maxlength="20"
                required
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-user" aria-hidden="true"></i>
              </span>
            </div>

            <div class="container-login100-form-btn">
              <button class="login100-form-btn" type="submit">Buscar</button>
              <table class="table table-bordered table-hover">
                <h1><br />Producto</h1>
                <thead>
                  <tr>
                    <th>ID PRODUCTO</th>
                    <th>IMAGEN PRODUCTO</th>
                    <th>NOMBRE PRODUCT0</th>
                    <th>DESCRIPCION PRODUCTO</th>
                    <th>PRECIO</th>
                    <th>CANTIDAD PRODUCTO</th>
                    <th>CATEGORIA</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i = 0; i < row.length; i++) { %>
                  <tr>
                    <td><%= row[i].IDPRODUCT%></td>
                    <td>
                      <img src="<%" ="row[i].IMAGEPRODUCT%" /> width="70"
                      height="70">
                    </td>
                    <td><%= row[i].NAMEPRODUCT%></td>
                    <td><%= row[i].DESCRIPTIONPRODUCT%></td>
                    <td><%= row[i].PRICE%></td>
                    <td><%= row[i].AMOUNTPRODUCT%></td>
                    <td><%= row[i].CATEGORY%></td>
                    <% } %>
                  </tr>
                </tbody>
              </table>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- footer starts here -->
    <footer class="footer clearfix">
      <div class="container">
        <div class="row">
          <div class="col-xs-6 footer-para">
            <p>&copy;Multifiltros Todos los derechos reservados</p>
          </div>
          <div class="col-xs-6 text-right">
            <a href=""><i class="fa fa-facebook"></i></a>
            <a href=""><i class="fa fa-twitter"></i></a>
            <a href=""><i class="fa fa-skype"></i></a>
          </div>
        </div>
      </div>
    </footer>

    <script src="../js/jquery-2.1.1.js"></script>
    <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
    <script src="../js/gmaps.js"></script>
    <script src="../js/smoothscroll.js"></script>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/custom.js"></script>
  </body>
</html>
